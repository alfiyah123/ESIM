<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context="com.example.rahmadewi.esim1.feature.menu.MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:orientation="vertical">

        <Button
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_blue"
            android:layout_width="match_parent"
            android:id="@+id/btnMateri"
            android:layout_height="@dimen/menu_high"
            android:drawableLeft="@drawable/materi"
            android:drawablePadding="10dp"
            android:gravity="left|center"
            android:padding="6dp"
            android:text="@string/menu_materi"
            android:textColor="#FFF"
            />

        <Button
            android:id="@+id/btnLatihanSoal"
            android:background="@drawable/bg_blue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_high"
            android:drawableLeft="@drawable/create"
            android:drawablePadding="6dp"
            android:layout_marginBottom="5dp"
            android:gravity="left|center"
            android:padding="10dp"
            android:text="@string/menu_latihan"
            android:textColor="#FFF"
            android:focusable="true" />

        <Button
            android:id="@+id/btnSimulasi"
            android:background="@drawable/bg_blue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_high"
            android:drawableLeft="@drawable/simulasi"
            android:drawablePadding="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="left|center"
            android:padding="6dp"
            android:text="@string/menu_simulasi"
            android:textColor="#FFF"
            />

        <Button
            android:layout_width="match_parent"
            android:background="@drawable/bg_blue"
            android:id="@+id/btnChart"
            android:layout_height="@dimen/menu_high"
            android:drawableLeft="@drawable/chart"
            android:drawablePadding="10dp"
            android:gravity="left|center"
            android:padding="6dp"
            android:text="@string/menu_grafik"
            android:textColor="#FFF"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtKategori"/>

    </LinearLayout>
</ScrollView>

