<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#FFF"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rahmadewi.esim1.feature.latihan_soal.LatihanActivity">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/bgLatihan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <RelativeLayout
            android:padding="10dp"
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView android:id="@+id/gbrLatihan"
                android:maxWidth ="250dp"
                android:maxHeight="250dp"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
            </ImageView>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:textSize="16sp"
                android:text="Ini untuk Soal"
                android:textColor="#616161"
                android:layout_below="@+id/gbrLatihan"
                android:id="@+id/txtSoalLatihan" />

            <RadioGroup
                android:id="@+id/opsiLatihan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/txtSoalLatihan"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Opsi A"
                    android:lineSpacingExtra="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="16sp"
                    android:textColor="#616161"
                    android:id="@+id/opsi_1_latihan" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Opsi B"
                    android:lineSpacingExtra="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="16sp"
                    android:textColor="#616161"
                    android:id="@+id/opsi_2_latihan" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Opsi C"
                    android:lineSpacingExtra="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="16sp"
                    android:textColor="#616161"
                    android:id="@+id/opsi_3_latihan" />
            </RadioGroup>

            <Button
                android:id="@+id/btnCekLatihan"
                android:background="@drawable/bg_yellow"
                android:layout_marginTop="30dp"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_below="@+id/opsiLatihan"
                android:textColor="#FFF"
                android:text="Cek Jawaban"
                android:enabled="false"
                android:layout_alignParentLeft="true"/>

            <Button
                android:id="@+id/btnNextLatihan"
                android:background="@drawable/bg_blue"
                android:layout_marginTop="30dp"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_below="@+id/opsiLatihan"
                android:textColor="#FFF"
                android:text="selanjutnya"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</ScrollView>

